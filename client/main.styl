body
  background-color: #F0F0F0
.card
  background #FFF
  padding 3%
  margin-bottom 20px
  position relative
  z-index 1
  &.highPriority
    background #03A9F4
    p
      color #FFF
    a
      color:#fff
    blockquote
      color:#fff
      word-wrap: break-word;
  button
    margin-top 20px
  .fa-trash-o, .fa-pencil, .fixed-action-btn, .fa-trash
    opacity 0.3
    cursor pointer
    position absolute
    top 0
    right 0
    font-size 1.6em
    display block
    padding 20px
    color black
    &:hover
      color red
      opacity 0.6
  .fa-pencil
    right 40px
    &:hover
      color purple
  .ingredient
    display inline-block
    margin-right 10px
    font-size 1.2em
    // animation card 0.6s ease 1 forwards

.sender
  font-weight: bold;
.timestamp
  font-weight: 100;
  font-size: x-small;
  font-style: italic;
.insertMessage
  position:fixed
  bottom:0px

.new-message-container
  width: inherit
  display: inline-block
  bottom:0
  position: fixed
  margin-top:0px
  padding-left:20px
  padding-right:20px
  background #FFF
  z-index: 9999
  shadow-level(2)
  .form-group
    margin:0px

.messages
  padding-bottom:150px

.billboard
  background-color: #EE6E73
  background-size:cover;
  color #FFF
  text-align center
  padding 100px
